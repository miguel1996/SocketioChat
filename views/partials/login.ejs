<div id="login_form" class="container">

    <form id="loginForm">    
        <div class="form-group">
            <span>Username</span> <br><input id="user_name" type="text">
        </div>
        <div class="form-group">
            <span>Password</span> <br><input id="password" type="password">
        </div>
        <span style="color:red; display: none;" v-if="test !== 'sucess'" id="failed-login">
            {{msg}}<br>
        </span>
        <br>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Login</button>
        </div>
    </form>

</div>